{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tache</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tache.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ tache.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ tache.description }}</td>
            </tr>
            <tr>
                <th>Datedebut</th>
                <td>{% if tache.dateDeb %}{{ tache.dateDeb|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datefinprevue</th>
                <td>{% if tache.dateFinPrevue %}{{ tache.dateFinPrevue|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datefinreelle</th>
                <td>{% if tache.dateFinReel %}{{ tache.dateFinReel|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Avancement</th>
                <td>{{ tache.avancement }}</td>
            </tr>
            <tr>
                <th>Projet</th>
                <td>{{ tache.projet.nom }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tache_index') }}">Back to the list</a>
        </li>
        {% if (is_granted('ROLE_DEV') and (app.user.id == tache.user.id))
            or app.user.id == tache.projet.user.id or is_granted('ROLE_ADMIN') %}
        <li>
            <a href="{{ path('tache_edit', { 'id': tache.id }) }}">Edit</a>
        </li>
        {% endif %}
        {% if (is_granted('ROLE_DEV') and (app.user.id == tache.user.id))
            or app.user.id == tache.projet.user.id or is_granted('ROLE_ADMIN') %}
        <li>
            <a href="{{ path('tache_terminer', { 'id': tache.id }) }}">Terminer la tache</a>
        </li>
        {% endif %}
        {% if (is_granted('ROLE_DEV') and (app.user.id == tache.user.id))
            or app.user.id == tache.projet.user.id or is_granted('ROLE_ADMIN') %}
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
        {% endif %}
    </ul>
{% endblock %}
