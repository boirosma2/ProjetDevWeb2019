{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users list</h1>

    <table>
        <thead>
            <tr>
                <th>{{ 'label.Id'|trans }}</th>
                <th>Name</th>
                <th>Prenom</th>
                <th>Role</th>
                <th>Competences</th>
                <th>Taches</th>
                <th>Projets</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.name }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.role }}</td>
                <td>{{ user.competences[0] }}</td>
                <td>
                    {% for tache in user.taches %}
                        {{ tache.nom }}<br>
                    {% endfor %}
                </td>
                <td>
                    {% for projet in user.projets %}
                        {{ projet.nom }}<br>
                    {% endfor %}
                </td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_new') }}">Create a new user</a>
        </li>
    </ul>
{% endblock %}
